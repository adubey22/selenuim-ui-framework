<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme -->
        <!-- standard, dark -->
        <theme>dark</theme>

        <!-- enables timeline -->
        <!-- defaults to true -->
        <enableTimeline>true</enableTimeline>

        <!-- document encoding -->
        <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- protocol for script and stylesheets -->
        <!-- defaults to https -->
        <protocol>https</protocol>

        <!-- title of the document -->
        <documentTitle>EMR Automation Framework</documentTitle>

        <!-- report name - displayed at top-nav -->
        <reportName>
            <![CDATA[
            <img src='src/test/resources/images/hplx_logo.png'/>
                    ]]>
        </reportName>

        <!-- custom javascript -->
        <scripts>
            <![CDATA[
                $(document).ready(function() {

                });
            ]]>
        </scripts>

        <!-- custom styles -->
        <styles>
            <![CDATA[
           .report-name{padding-left:18px;} .report-name>img {float:left;height:30%;margin-left:30px;margin-top:3px;width:auto;}
            ]]>
        </styles>
    </configuration>
</extentreports>
